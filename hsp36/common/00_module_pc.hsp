#module
#deffunc mycolor double p1, double p2, double p3, int p4
	switch p4
		case 0
			color double(p1 * 255), double(p2 * 255), double(p3 * 255)
			swbreak
		case 1
			objcolor double(p1 * 255), double(p2 * 255), double(p3 * 255)
			swbreak
		case 2
			color double(p1 * 255), double(p2 * 255), double(p3 * 255)
			objcolor double(p1 * 255), double(p2 * 255), double(p3 * 255)
			swbreak
		default
			swbreak
	swend
	return
#global
