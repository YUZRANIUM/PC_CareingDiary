			case hLVgsouko
				sdim gpu, 2048 : sdim data_gpu, 1024
				sql_q "SELECT * FROM MyGPU ORDER BY " + gpu_culm(inde) + sqsc
				myindata gpu_cunt, g_culm_num, gpu_culm, gpu
				dellv hLVgsouko
