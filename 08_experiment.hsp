// 表示処理
*OPEN

	/***  ファイルオープン  ***/
	dialog "db", 16, "DataBase"
	if (stat = 0) {return} else {dbfiles = refstr}

	// 拡張子確認
	if (getpath(refstr, 2) != ".db") {
		dialog "This file is not DataBase file!", 1, "FileError"
		sdim dbfiles
		return
	}

	// .dbファイルのパス表示
	sendmsg hObjhwnd(0), $C, 0, dbfiles
	logpri dbfiles

	sdim sqschema, 4096                 // 変数初期化
	sdim nbuf1, 1024
	sdim nbuf2, 1024
	hogehoge = 0, 0


	/*** DB OPEN ***/
	sql_open dbfiles
	sql_q "SELECT * FROM sqlite_master;", dbschema
	dellv hObjhwnd(3), 0, 2             // リストビュー初期化
	insqlitem hObjhwnd(3), dbschema     // リストビューに全データ入力
	dellv hObjhwnd(3), 4, 1             // カラムインデックス4 "sqlカラム"の削除
	sql_close
	/*** DB CLOSE ***/


	// 削除した "sqlカラム"のレコードのみバッファーに保存
	repeat length2(dbschema) - 1
		sqschema += "\n" + dbschema(4, cnt)
	loop

	notesel sqschema

	repeat notemax
		noteget nbuf1, cnt
		if (nbuf1 == "") {notedel cnt}
	loop
	sdim nbuf1, 1024

	logpri sqschema

	strrep sqschema, "\n", ""
	strrep sqschema, "\t", ""
	strrep sqschema, "CREATE", "\n\nCREATE"

	logpri sqschema

	logpri notefind(")", 2)
	if (notefind(")", 2) != -1) {
		noteget nbuf1, notefind(")", 2)
		strrep nbuf1, "(", "(\n"
		strrep nbuf1, ")", "\n)"
		strrep nbuf1, "[", "\n["
	}

	logpri nbuf1
	logpri sqschema

	strrep sqschema, " AS ", "\n\tAS "
	strrep sqschema, " FROM", "\n\tFROM"
	strrep sqschema, " WHERE", "\n\tWHERE"
	strrep sqschema, " ORDER", "\n\tORDER"
	logpri sqschema

	split nbuf1, "\n", nbuf1
	i(0) = stat
	logpri "nbuf1↓"
	foreach nbuf1
		logmes nbuf1(cnt)
	loop
	foreach i(0)
		noteadd nbuf1(i(0) - 1) + "\n", 0, 0
		i(0)--
	loop

	logpri sqschema

	noteunsel

	sendmsg hObjhwnd(2), $C, 0, sqschema
	return

